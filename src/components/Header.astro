---
import '@fontsource/lexend-giga';

const navItems = [
    // { linkText: 'Home', href: '/' },
    // { linkText: 'Revalidation', href: '/revalidation' },
    // { linkText: 'Image CDN', href: '/image-cdn' },
    // { linkText: 'Edge Function', href: '/edge' },
    // { linkText: 'Blobs', href: '/blobs' }
];
---

<div class="text-2xl md:text-6xl font-bold text-center py-12 font-lexend underline">GUY SIMONE ARTS</div>
<nav class="hidden flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
